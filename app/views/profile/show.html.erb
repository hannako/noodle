<h1>My Profile</h1>

<%if (@profile.address_line_one.nil?) && (@profile.address_line_two.nil?)%>

  <h2>Please add your profile information</h2>

  <%=link_to 'Create my profile', new_user_profile_path(current_user)%>
<%else%>
  <div class = jumbotron>
  <h2>Address:</h2>
  <h3><%=@profile.address_line_one%></h3>
  <h3><%=@profile.address_line_two%></h3>
  <h3><%=@profile.address_line_three%></h3>
  <h3><%=@profile.address_post_code%></h3>
  <%=button_to 'Update this profile', edit_profile_path(@profile), :method=>:get, :class=>'button'%>
</div>
<%end%>
